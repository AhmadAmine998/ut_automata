<!-- -*- mode: XML -*- -->
<launch>

  <arg name="node_name" default="vesc" />

  <!-- Optionally launch in GDB, for debugging -->
  <arg name="debug" default="false" />
  <arg if="$(arg debug)" name="launch_prefix" value="xterm -e gdb --args" />
  <arg unless="$(arg debug)" name="launch_prefix" value="" />

  <!-- VESC driver parameters -->
  <rosparam command="load"
    file="$(find f1tenth_course)/vesc_config/vesc.yaml" />

  <!-- VESC driver node -->
  <node pkg="f1tenth_course" type="vesc_driver_node" name="$(arg node_name)"
        output="screen" launch-prefix="$(arg launch_prefix)" >
  </node>

</launch>
